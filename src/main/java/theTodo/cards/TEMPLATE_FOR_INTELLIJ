import static theTodo.util.Wiz.*;

public class ${NAME} extends AbstractTodoCard {

    public final static String ID = makeID("${NAME}");
    // intellij stuff ${TYPE}, ${TARGET}, ${RARITY}

    #if (${DAMAGE} != "")    private static final int DAMAGE = ${DAMAGE};
